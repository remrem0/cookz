<%= simple_form_for([menu, booking]) do |f| %>
<%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, as: :text, label: "Tell us a bit about your diner..." %>
    <%= f.simple_fields_for :date do |date_form| %>
      <%= date_form.input :booking_date, as: :datetime, label: "When exactly would you like to eat?" %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Book it while it's hot!", class: "btn btn-success booking-button" %>
  </div>
<% end %>
