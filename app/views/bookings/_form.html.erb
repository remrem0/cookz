<%= simple_form_for(booking_new_path) do |f| %>
<%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :description, as: :text, label: "Tell us a bit about your diner..." %>
    <%= f.input :datetime, as: :datetime, label: "When exactly would you like to eat?" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Book it while it's hot!", class: "btn btn-success booking-button" %>
  </div>
<% end %>
