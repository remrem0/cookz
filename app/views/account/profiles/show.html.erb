<div class="profile-header-wrapper">
  <div class="container profile-header-container text-center">
    <div class="profile-header-infos">
      <%= cl_image_tag(@user.avatar, class:"avatar-medium") %>
      <h1><%= @user.first_name  %></h1>
      <h2>"Cookz for life"</h2>
    </div>
    <div class="tabs">
      <%= link_to  "Profile Info", account_profile_path, class:"tab active"%>
      <%= link_to  "My Reservations", account_reservations_path, class:"tab"%>
      <%= link_to  "My menus", account_menus_path, class:"tab"%>
    </div>
  </div>
</div>
<div class="container" id="account-infos">
  <div class="col-xs-6">
    <div class="account-titles">
      <h4> First name: </h4>
      <h4> Last name: </h4>
      <h4> Email: </h4>
      <h4> Address: </h4>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="account-content">
      <h4><%= @user.first_name  %></h4>
      <h4><%= @user.last_name  %></h4>
      <h4><%= @user.email  %></h4>
      <h4><%= @user.address %></h4>
    </div>
  </div>

  <div style="text-align: center">
  <%= link_to edit_user_registration_path do %>
    <%= image_tag("edit.png", class: "edit")%>
  <% end %>
  </div>
</div>
