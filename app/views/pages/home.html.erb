<div class="container-grey">
  <div class="text-center" id="text-welcome">
    <h1>Welcome to Cookers' homepage</h1>
    <h3>Have the best cooks in town prepare your meal</h3>
  </div>
  <div class="search-card">
    <form action="/menus" class="navbar-wagon-search">
      <input type="text" class="navbar-wagon-search-input form-control" placeholder="Where do you live?">

      <input type='text' class="date navbar-wagon-search-input form-control" id='datetimepicker1' placeholder="When will you eat?" />

      <div class="required menu_category navbar-wagon-search-input">
        <select name="menu[:category_id]" id="menu_category_id" class="form-control  select required">
          <option value="" disabled selected>What will you eat?</option>
          <% @categories.each do |category| %>
          <option value="<%= category.id %>"><%= category.name  %></option>
          <% end %>
        </select>
      </div>
      <div class="navbar-wagon-search-input">
        <select name="" id="guests_number" class="form-control select required">
          <option value="" disabled selected>How many people?</option>
          <% @numbers.each do |number| %>
          <option value=""><%= number  %></option>
          <% end %>
        </select>
      </div>
      <div>
        <button type="submit" class="navbar-wagon-search-btn">
          <i class="fa fa-search"></i>
        </button>
      </div>
    </form>
  </div>
</div>




<div id="text-header">
  <h2 class="text-center">Our best-rated Cooks</h2>
</div>

<div class="wrapper-white">
  <div class="row">
    <% @menus.each do |menu| %>
    <div class="col-xs-12 col-sm-6">

      <div class="card" style="background: linear-gradient(100deg, rgba(236, 233, 230, 0.2) 0%, rgba(255, 255, 255, 0.2) 50%),  url('<%= cl_image_path(menu.picture) %>')">
        <div class="card-category">
          <%= menu.name %>
        </div>
        <div class="card-price">
          <%="Price: #{menu.price} â‚¬" %>
        </div>
        <div class="card-guests">
          <%="For #{menu.guests} people" %>
        </div>
        <div class="card-user">
          <%= cl_image_tag(menu.user.avatar, class: "avatar-large")%>
        </div>
        <%= link_to "", menu_path(:menu_id), class:"card-link"%>
      </div>

    </div>
    <% end %>
  </div>
</div>


<% content_for :after_js do %>
<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker({
      format: 'DD/MM/YYYY'
    });
  });
</script>
<% end %>
