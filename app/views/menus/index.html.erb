<h1 class="text-center">Menus</h1>

<div class="container">
  <div class="row">
    <% @menus.each do |menu| %>
    <div class="col-xs-12 col-sm-4">

      <div class="card" style="background: linear-gradient(100deg, rgba(236, 233, 230, 0.3) 0%, rgba(255, 255, 255, 0.3) 50%),  url('<%= cl_image_path(menu.picture) %>')">
        <div class="card-category">
          <%= menu.name %>
        </div>
        <div class="card-price">
          <%="Price: #{menu.price} â‚¬" %>
        </div>
        <div class="card-guests">
          <%="For #{menu.guests} people" %>
        </div>
        <div class="card-user">
          <%= cl_image_tag(menu.user.avatar, class: "avatar-large")
 %>
        </div>
       <%= link_to "", menus_show_path, class:"card-link"%>
      </div>

    </div>
    <% end %>
  </div>
</div>
